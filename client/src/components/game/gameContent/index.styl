.game-content-wrap
  padding 20px
  min-height calc(100% - 120px)
  overflow-y scroll
  // 遮住滚动条
  width calc(100% + 20px)
  .welcome-item
    color #666666
    margin-top 10px
    margin-left 100px
    margin-bottom 10px
  .welcome-content
    width 100%
    .create-user-btn
      width 100%
  .normal-title
    height 24px
    line-height 24px
    font-size 14px
    font-weight 500
  .bc-title
    width 100%
    text-align center
    font-weight bold
    font-size 18px
  .normal-title
    font-size 14px
    font-weight 500
  .desk-content
    border-radius 4px
    border 1px solid #eeeeee
    overflow hidden
    position relative
    padding 5px
    flex-wrap wrap
    flex-direction row
    display flex
    .player-cell
      width 33.33% - 2.5px
      height 80px
      .player-seat-cell
        width 130px
        height 80px
        border-radius 4px
        position relative
        overflow hidden
        .txt
          font-size 14px
          color white
        .bolder
          font-weight 500
        .tag-view
          position absolute
          left 0
          right 0
          top 0
          bottom 0
          .tag
            position absolute
            height 20px
            font-size 12px
            color white
            font-weight bold
            padding-left 8px
            padding-right 8px
            border-radius 10px
            text-align center
            line-height 20px
          .camp-good,.camp-wolf
            left 4px
            top 4px
          .role-name
            top 4px
            right 4px
        .dead-view
          position absolute
          left 0
          right 0
          top 0
          bottom 0
          .dead-mask
            position absolute
            left 0
            right 0
            top 0
            bottom 0
            background-color black
            opacity 0.3
          .dead-text
            font-weight bold
            font-size 24px
            text-align center
            color red
            line-height 80px
  .notice-content
    border-radius 4px
    text-align center
    overflow hidden
    min-height 100px
    position relative
    border 1px solid #eeeeee
    display flex
    flex-wrap wrap
    padding 20px
    .txt
      line-height 24px
      color black
      font-weight 500
      width 100%
      font-style oblique
      font-size 16px
  .skill-btn
    width 100%
    height 40px
    font-size 14px
    font-weight bold
    .vote-icon
      width 24px
      height 24px

.room-content-wrap
  padding 20px
  min-height calc(100% - 120px)
  overflow-y scroll
  // 遮住滚动条
  width calc(100% + 20px)
  .welcome-item
    color #666666
    margin-top 10px
    margin-left 100px
    margin-bottom 10px
  .welcome-content
    width 100%
    .create-user-btn
      width 100%
  .normal-title
    height 24px
    line-height 24px
    font-size 14px
    font-weight 500
  .bc-title
    width 100%
    text-align center
    font-weight bold
    font-size 18px
  .desk-view-wrap
    border-radius 4px
    border 1px solid #eeeeee
    overflow hidden
    width 100%
    position relative
    padding 5px
    flex-wrap wrap
    flex-direction row
    display flex
    .game-title
      width 100%
      height 40px
      font-size 16px
      font-weight bold
    .seat-cell
      width 33.33% - 2.5px
      height 60px
      .seat-in
        width 60px
        height 60px
        line-height 60px
        font-size 14px
        text-align center
        border-radius 30px
        color #ffffff
        background-color orange
      .empty-seat
        width 60px
        height 60px
        line-height 60px
        font-size 14px
        text-align center
        border-radius 30px
        background-color #eeeeee
      .seat-status
        font-size 14px
      .cell-text
        width 70px
        text-align center
        overflow hidden
        .kick-btn,.kick-btn:focus,.kick-btn:hover,.kick-btn:after
          border none
          box-shadow none!important
  .wait-content
    background-color #eeeeee
    overflow hidden
    max-height 180px
    min-height 60px
    position relative
    display flex
    flex-wrap wrap
    padding 10px
    .wait-cell
      background-color #67c23a
      color #ffffff
      text-align center
      height 30px
      line-height 30px
      font-size 14px
      padding-left 20px
      padding-right 20px
      border-radius 3px
.settings
  width 100%
  .setting-cell
    min-height 40px
    padding-left 24px
    padding-right 24px
    .item-title
      font-size 14px
      font-weight bold
      text-align left
      min-width 160px
    .fake-input
      text-align center
      width 48px
      font-size 16px
    .icon-font
      cursor pointer
      font-size 36px
.setting-modal-title
  width 100%
  text-align center
  font-size 18px
  font-weight bold
  font-style italic
.mode-content
  margin-left 25px
  margin-right 25px

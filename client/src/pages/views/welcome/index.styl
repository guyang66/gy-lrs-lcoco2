.welcome-container
  width 100%
  max-width 500px
  height 100vh
  background-color #ffffff
  position relative
  .welcome-wrap
    margin 20px
    min-height calc(100% - 40px)
    position relative
    .welcome-title
      font-size 24px
      color #333333
      text-align center
      font-weight 500
    .welcome-user
      font-style italic
    .welcome-item
      color #666666
      margin-top 10px
      margin-left 100px
      margin-bottom 10px
    .welcome-content
      width 100%
      .create-user-btn
        width 100%
    .footer
      width 100%
      height 60px
      position absolute
      bottom 0
      left 0
      .logout-btn
        width 100%
        height 100%
        font-size 16px

